   "source": [
    "# 8. Calcul de racines
",
    "def racine_carree(x):
",
    "    if x < 0:
",
    "        return None  # Pas de racine carrée pour les nombres négatifs
",
    "    r = x
",
    "    for _ in range(10):  # Méthode de Newton
",
    "        r = (r + x / r) / 2
",
    "    return r
",
    "
",
    "# Test de la racine carrée
",
    "resultat_racine = racine_carree(9)  # 3.0
",
    "resultat_racine"
   ]
